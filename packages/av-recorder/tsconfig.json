{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["@types/dom-mediacapture-transform", "@types/dom-webcodecs"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "skipLibCheck": true
  },
  "include": ["../../types/mp4box.d.ts", "src", "demo"]
}
