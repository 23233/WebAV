{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1",
    "rimraf": "^5.0.1",
    "ts-standard": "^12.0.2"
  },
  "scripts": {
    "build": "lerna run build",
    "publish:all": "lerna publish from-package --no-verify-access --no-private --yes",
    "prebuild:demo": "yarn build",
