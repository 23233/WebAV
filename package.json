{
  "name": "root",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "lerna": "^3.22.1",
    "rimraf": "^5.0.1",
    "ts-standard": "^12.0.2",
    "typedoc": "^0.25.4",
    "simple-git-hooks": "^2.11.0",
    "lint-staged": "^15.2.2"
  },
  "scripts": {
    "build": "lerna run build",
    "publish:all": "lerna publish from-package --no-verify-access --no-private --yes",
    "build:api": "lerna run build:api"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "npm-packlist": "1.1.12"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{json,ts,tsx,js,md}": [
      "prettier --write"
    ]
  }
}
