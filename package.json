    "postbuild:demo": "rimraf demo-dist && mkdir demo-dist && cp -r packages/**/demo-dist/* ./demo-dist"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "npm-packlist": "1.1.12"
  },
  "version": "0.1.0"
}